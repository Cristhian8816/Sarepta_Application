<link href="~/css/site.min.css" rel="stylesheet" />


@model Sarepta_WebApplication1.Models.userAccount


@{
    <h2>Aplicacion Sarepta</h2>
    <h3> Bienvenida al sistema Dra. @ViewBag.Message </h3><br /><br />

    <h5> En el siguiente menu puede Registrar la informacion que el boton le indica</h5>

    <div class="container">
        @using (Html.BeginForm("PatientRegister", "Patients", FormMethod.Post))
        {
            <input type="submit" value="Registrar un Paciente Nuevo" class="btn-register" style="background-color:#B45F04; font-size:15px;
                            text-align:center; width: 250px; height:50px; padding:10px  20px 10px 20px; margin-top: 12px;
                            border-radius: 4px; color: white" />
        }
    </div>

    <div class="container">
        @using (Html.BeginForm("SareptaProcesses", "Processes", FormMethod.Post))
        {
            <input type="submit" value="Registrar Un Proceso Nuevo" class="btn-register" style="background-color:#B45F04; font-size:15px;
                            text-align:center; width: 250px; height:50px; padding:10px  20px 10px 20px; margin-top: 12px;
                            border-radius: 4px; color: white" />
        }
    </div>

    <div class="container">
        @using (Html.BeginForm("PaymentPatientID", "Payments", FormMethod.Post))
        {
            <input type="submit" value="Registrar Un Pago Nuevo" class="btn-register" style="background-color:#B45F04; font-size:15px;
                            text-align:center; width: 250px; height:50px; padding:10px  20px 10px 20px; margin-top: 12px;
                            border-radius: 4px; color: white" />
        }
    </div>

    <div class="container">
        @using (Html.BeginForm("PatientProcesses", "Home", FormMethod.Post))
        {
            <input type="submit" value="Pacientes/Procesos" class="btn-register" style="background-color:#B45F04; font-size:15px;
                            text-align:center; width: 250px; height:50px; padding:10px  20px 10px 20px; margin-top: 12px;
                            border-radius: 4px; color: white" />
        }
    </div>

}



