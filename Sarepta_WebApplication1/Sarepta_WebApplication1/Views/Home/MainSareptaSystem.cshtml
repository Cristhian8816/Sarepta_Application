@model Sarepta_WebApplication1.Models.userAccount

<h2>Aplicacion Sarepta</h2>
<h3> Bienvenida al sistema Dra. @Html.DisplayFor(modelItem => modelItem.FirstName) @Html.DisplayFor(modelItem => modelItem.LastName) 
    que desea realizar...</h3>

<div class="container" style="width:40%; margin-top:2%">
    @using (Html.BeginForm("PatientRegister", "Patients", FormMethod.Post))
    {
        <input type="submit" value="Registrar un Paciente Nuevo" class="btn-register" style="background-color:#B45F04; font-size:15px;
                         text-align:center; width: 250px; height:50px; padding:10px  20px 10px 20px; margin-top: 12px;
                         border-radius: 4px; color: white" />
        @Html.ValidationSummary()
    }
</div>

