@model Sarepta_WebApplication1.Models.userAccount

<br /><br />
<h2>Login de Usuario</h2><br />
<p>Ingrese el nombre de usuario y contraseña para hacer login en el sistema</p>

<div class="container">

    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        <input type="hidden" name="token" id="token" value="" />

        <strong>@Html.Label("Usuario: ")</strong>
        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Nombre de Usuario", autocomplete = "off" })<br />
        <strong>@Html.Label("Password: ")</strong>
        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Clave", autocomplete = "off", @value = "" })<br />

        <input type="submit" value="Ingresar" class="btn-register" style="background-color:#B45F04; font-size:15px;
                         text-align:center; width: 150px; height:50px; padding:10px  20px 10px 20px; margin-top: 12px;
                         border-radius: 4px; color: white" /> <br />
        @Html.ValidationMessageFor(model => model.UserName);
    }

</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.2/rollups/hmac-sha256.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.2/components/enc-base64-min.js"></script>
<script src="~/js/token.js"></script>


